---
import BaseLayout from '../layouts/BaseLayout.astro';

/* Sections*/
import HeroSection from '../components/sections/HeroSection.astro';
import HeroSectionImage from '../components/sections/HeroSectionImage.astro';

import ProjectsSection from '../components/sections/ProjectsSection.astro';
import { projects } from '../data/projects'

/* UI */
import Section from '../components/ui/Section.astro';
import SectionHeader from '../components/ui/SectionHeader.astro';
import Button from '../components/ui/Button.astro';



---

<BaseLayout title="Home — Vega">
 

  <HeroSection
    eyebrow='PRATICE SHEET'
    title='Vega is trying to ascend yow'
    description='tailwind play, all about front-end, lets go'
    align='left'
    primaryAction={{label: 'Learn More', href: '/projects'}}
    secondaryAction={{label: 'Read Articles', href: '/blog'}}

  />

  
  <ProjectsSection projects={projects} />

  <Section variant="default">
    <SectionHeader
      eyebrow="Welcome"
      title="Hi, I'm Vega — a developer building modern web experiences."
      description="This is my Astro-based portfolio where I showcase projects, write blogs, and experiment with Astro, Vue, and PHP."
      align="center"
    />

    <div class="flex flex-wrap gap-3 justify-center">
      <Button variant="primary" href="/projects" >
        View Projects
      </Button>
      <Button variant="secondary" href="/blog">
        Read the Blog
      </Button>
    </div>
  </Section>

  <Section>
    <SectionHeader
      eyebrow="Overview"
      title="What you'll find here"
      description="A collection of my favorite projects, experiments, and writings as I grow as a developer."
    />

    <div class="grid gap-6 md:grid-cols-3">
      <div class="border rounded-lg p-4 shadow-sm">
        <h3 class="font-semibold mb-1">Projects</h3>
        <p class="text-sm text-slate-600 mb-2">
          Real-world builds powered by Astro, Vue, and PHP/Laravel.
        </p>
        <Button variant="ghost" size="sm" href="/projects">See projects</Button>
      </div>

      <div class="border rounded-lg p-4 shadow-sm">
        <h3 class="font-semibold mb-1">Blog</h3>
        <p class="text-sm text-slate-600 mb-2">
          Notes, learnings, and breakdowns of things I'm working on.
        </p>
        <Button variant="ghost" size="sm" href="/blog">View posts</Button>
      </div>

      <div class="border rounded-lg p-4 shadow-sm">
        <h3 class="font-semibold mb-1">About Me</h3>
        <p class="text-sm text-slate-600 mb-2">
          A quick story about my journey into web development.
        </p>
        <Button variant="ghost" size="sm" href="/about">Read more</Button>
      </div>
    </div>
  </Section>

</BaseLayout>
