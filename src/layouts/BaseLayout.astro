---
import "../styles/global.css"

interface Props {
  title?: string;
}

const { title = "Vega Portfolio" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>

  <body class="min-h-screen bg-white text-slate-700">
    <!-- HEADER -->
    <header class="border-b relative z-10">
      <nav class="max-w-7xl mx-auto p-4 flex justify-between">
        <!-- Site name -->
        <a href="/" class="font-bold">Vega</a>

        <!-- Navigation links -->
        <ul class="flex gap-4">
          <li><a href="/about">About</a></li>
          <li><a href="/projects">Projects</a></li>
          <li><a href="/blog">Blog</a></li>
        </ul>
      </nav>
    </header>

    <!-- MAIN CONTENT SLOT  -->
    <main>
      <slot />
    </main>

    <!-- FOOTER -->
    <footer class="border-t py-6 text-center text-sm text-slate-500">
      Â© {new Date().getFullYear()} Vega. All rights reserved.
    </footer>
  </body>
</html>
