---
interface Props {
  href?: string;
  variant?: 'primary' | 'secondary' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  className?: string;
}

const {
  href,
  variant = 'primary',
  size = 'md',
  className = '',
} = Astro.props;

const baseClasses =
  'inline-flex items-center justify-center rounded-lg font-medium transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500';

let variantClasses = '';
let sizeClasses = '';

// variant styles
if (variant === 'primary') {
  variantClasses = 'bg-indigo-600 text-white hover:bg-indigo-700';
} else if (variant === 'secondary') {
  variantClasses = 'bg-slate-100 text-slate-900 hover:bg-slate-200';
} else if (variant === 'ghost') {
  variantClasses = 'bg-transparent text-indigo-600 hover:bg-indigo-50';
}

// size styles
if (size === 'sm') {
  sizeClasses = 'px-3 py-1.5 text-sm';
} else if (size === 'md') {
  sizeClasses = 'px-4 py-2 text-sm';
} else if (size === 'lg') {
  sizeClasses = 'px-5 py-2.5 text-base';
}

const buttonClass = `${baseClasses} ${variantClasses} ${sizeClasses} ${className}`.trim();
---

{href ? (
  <a href={href} class={buttonClass}>
    <slot />
  </a>
) : (
  <button type="button" class={buttonClass}>
    <slot />
  </button>
)}
