---
import ProjectCard from "./ProjectCard.astro";

interface Props {
    projects: {
        title: string;
        description: string;
        image: string;
        href: string;
    }[];
}

const { projects } = Astro.props;
---

<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
    {projects.map(project => (
        <ProjectCard
            title={project.title}
            description={project.description}
            image={project.image}
            href={project.href}
        />
    ))}
</div>