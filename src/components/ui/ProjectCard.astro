---
import type { Project } from "../../data/projects";

/**
 * Instead of many individual props (title, description, image, href),
 * gagawin nating isang prop: `project: Project`
 */
interface Props {
  project: Project;
}

const { project } = Astro.props;
// JS: object destructuring â€” we now use project.title, project.image, etc.
---

<a 
  href={`/projects/${project.slug}`}
  class="group block rounded-xl overflow-hidden bg-white border border-slate-200 shadow-sm hover:shadow-lg transition-shadow"
>
  <!-- IMAGE WRAPPER -->
  <div class="relative h-48 overflow-hidden">
    <img 
      src={project.image}
      alt={project.title}
      class="absolute inset-0 w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
    />
  </div>

  <!-- TEXT CONTENT -->
  <div class="p-5 flex flex-col gap-2">
    <h3 class="text-lg font-semibold text-slate-900 group-hover:text-indigo-600 transition-colors">
      {project.title}
    </h3>

    <p class="text-slate-600 text-sm">
      {project.description}
    </p>

    {project.tags && (
      <div class="flex flex-wrap gap-2 mt-2">
        {project.tags.map(tag => (
          <span class="text-xs px-2 py-1 rounded-full bg-slate-100 text-slate-600">
            {tag}
          </span>
        ))}
      </div>
    )}
  </div>

</a>
