---
interface Props {
    eyebrow?: string;
    title: string;
    description?: string;
    align?: 'left' | 'center';
}

const {
    eyebrow,
    title,
    description,
    align = 'left',
} = Astro.props;

const alignClass = align === 'center' ? 'text-center items-center': 'text-left items-start';
---

<div class={`flex flex-col gap-2 mb-8 ${alignClass}`}>
    {eyebrow && (
    <p class="text-sm font-medium tracking-wide uppercase text-indigo-500">
        {eyebrow}
    </p>
    )}

    <h2 class="text-2xl md:text-3xl font-bold tracking-tight">
        {title}
    </h2>

    {description && (
        <p class="text-sm md:text-base text-slate-600 max-w-2xl">
            {description}
        </p>
    )}
</div>